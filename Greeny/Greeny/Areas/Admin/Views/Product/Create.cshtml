@model ProductCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container my-5">
    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group mt-3">
            <input asp-for="Images" class="form-control" />
            <span asp-validation-for="Images" class="text-danger d-block"></span>
            <br />
            <p><b>Name</b></p>
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger d-block"></span>
            <br />
            <p><b>Description</b></p>
            <input asp-for="Description" class="form-control" placeholder="Description" />
            <span asp-validation-for="Description" class="text-danger d-block"></span>
            <br />
            <p><b>Price</b></p>
            <input asp-for="Price" class="form-control" placeholder="Price" />
            <span asp-validation-for="Price" class="text-danger d-block"></span>
            <br />
            <p><b>SkuCode</b></p>
            <input asp-for="SkuCode" class="form-control" placeholder="SkuCode" />
            <span asp-validation-for="SkuCode" class="text-danger d-block"></span>
            <br />
            <p><b>SaleCount</b></p>
            <input asp-for="SaleCount" class="form-control" placeholder="SaleCount" />
            <span asp-validation-for="SaleCount" class="text-danger d-block"></span>
            <br />
            <p><b>RateCount</b></p>
            <input asp-for="RateCount" class="form-control" placeholder="RateCount" />
            <span asp-validation-for="RateCount" class="text-danger d-block"></span>
            <br />
            <p><b>ProductCount</b></p>
            <input asp-for="ProductCount" class="form-control" placeholder="ProductCount" />
            <span asp-validation-for="ProductCount" class="text-danger d-block"></span>

        </div>
        <p><b>Select Category</b></p>
        <div class="form-group mt-3">
            <select asp-for="CategoryId" class="form-control" asp-items=" ViewBag.categories"></select>
        </div>
        <p><b>Select SubCategory</b></p>
        <div class="form-group mt-3">
            <select asp-for="SubCategoryId" class="form-control" asp-items="ViewBag.subcategories"></select>
        </div>
        <p><b>Select Discount</b></p>
        <div class="form-group mt-3">
            <select asp-for="DiscountId" class="form-control" asp-items="ViewBag.discounts"></select>
        </div>
        <p><b>Select Brand</b></p>
        <div class="form-group mt-3">
            <select asp-for="BrandId" class="form-control" asp-items="ViewBag.brands"></select>
        </div>
        <p><b>Select Tag</b></p>
        <div class="form-group mt-3">
            <select asp-for="TagId" class="form-control" asp-items="ViewBag.tags"></select>
        </div>
        <button type="submit" class="btn btn-success btn-rounded btn-fw mt-3">Submit</button>
        <a asp-action="Index" class="btn btn-primary btn-rounded btn-fw mt-3">Back</a>
    </form>
</div>

