@model DiscountEditVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container my-5">
    <form method="post" asp-action="Edit">
        <p><b>Discount Name</b></p>
        <input asp-for="Name" class="form-control mt-3" maxlength="" />
        <span class="text-danger d-block" asp-validation-for="Name"></span>
        <br />
        <p><b>Discount Percent</b></p>
        <input asp-for="Discount" class="form-control mt-3" maxlength="" />
        <span class="text-danger d-block" asp-validation-for="Discount"></span>
        <button type="submit" class="btn btn-inverse-primary btn-fw mt-3">Submit</button>
        <a asp-action="Index" class="btn btn-outline-info btn-fw mt-3">Back</a>
    </form>

</div>

