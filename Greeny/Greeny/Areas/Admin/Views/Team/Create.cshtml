@model TeamCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container my-5">
    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group mt-3">
            <input asp-for="Images" class="form-control" />
            <span asp-validation-for="Images" class="text-danger d-block"></span>
            <br />
            <p><b>Full Name</b></p>
            <input asp-for="FullName" class="form-control" placeholder="Full Name" />
            <span asp-validation-for="FullName" class="text-danger d-block"></span>
        </div>
        <p><b>Select Position</b></p>
        <div class="form-group mt-3">
            <select asp-for="PositionId" class="form-control" asp-items="ViewBag.positions"></select>
        </div>
        <button type="submit" class="btn btn-success btn-rounded btn-fw mt-3">Submit</button>
        <a asp-action="Index" class="btn btn-primary btn-rounded btn-fw mt-3">Back</a>
    </form>
</div>

