@using Greeny.Models;
@model List<Product>

@foreach (var product in Model)
{
    <div class="col">
        <div class="feature-card">
            <div class="feature-media">
                <div class="feature-label"><label class="label-text feat">feature</label></div>
               <form id="wishlist-form" data-id="@product.Id">
                                        <button type="submit" class="product-wish wish">
                                            <i class="fas fa-heart"></i>
                                        </button>
                                    </form>
                
                <a class="feature-image"
                            href="product-video.html"><img src="~/images/product/@product.Images?.Where(m=>m.IsMain).FirstOrDefault()?.Image" alt="product"></a>
                <div class="feature-widget">
                    <a title="Product Compare" href="compare.html"
                       class="fas fa-random"></a><a title="Product Video"
                                                    href="https://youtu.be/9xzcVxSBbG8" class="venobox fas fa-play" data-autoplay="true"
                                                    data-vbtype="video"></a><a title="Product View" href="#" class="fas fa-eye"
                                                                               data-bs-toggle="modal" data-bs-target="#product-view"></a>
                </div>
            </div>
            <div class="feature-content">
                <h6 class="feature-name"><a asp-controller="Product" asp-action="Index" asp-route-id="@product.Id">@product.Name</a></h6>
                <div class="feature-rating">
                    <i class="active icofont-star"></i><i class="active icofont-star"></i><i class="active icofont-star"></i><i class="active icofont-star"></i><i class="icofont-star"></i><a href="product-video.html">(3 Reviews)</a>
                </div>
                <h6 class="feature-price"><del>$@product.Price</del><span><small>/piece</small></span></h6>
                <p class="feature-desc">@product.Description</p>

                <form id="basket-form" data-id="@product.Id">
                    <button type="submit" class="product-add" title="Add to Cart">
                        <i class="fas fa-shopping-basket"></i><span>add</span>
                    </button>
                </form>
                <div class="product-action">
                    <button class="action-minus" title="Quantity Minus">
                        <i class="icofont-minus"></i>
                    </button><input class="action-input"
                                    title="Quantity Number" type="text" name="quantity" value="1"><button class="action-plus" title="Quantity Plus">
                        <i class="icofont-plus"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
}

