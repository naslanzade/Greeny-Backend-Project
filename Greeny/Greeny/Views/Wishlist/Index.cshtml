@model List<WishlistDetailVM>
@{
    ViewData["Title"] = "Index";
}

<section class="inner-section single-banner" style="background: url(images/single-banner.jpg) no-repeat center;">
    <div class="container">
        <h2>wishlist</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Cart" asp-action="Index">shop grid</a></li>
            <li class="breadcrumb-item active" aria-current="page">wishlist</li>
        </ol>
    </div>
</section>
<section class="inner-section wishlist-part">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <div class="table-scroll">
                    @if (Model.Count()>0)
                    {
                        <table class="table-list">
                            <thead>
                                <tr>

                                    <th scope="col">Product</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">description</th>
                                    <th scope="col">status</th>                                    
                                    <th scope="col">action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="table-image"><img src="~/images/product/@item.Image" alt="product"></td>
                                        <td class="table-name">
                                            <h6>@item.Name</h6>
                                        </td>
                                        <td class="table-price">
                                            <h6>$@item.Price.ToString("0.####")<small>/kilo</small></h6>
                                        </td>
                                        <td class="table-desc">
                                            <p>
                                                @item.Description
                                            </p>
                                        </td>
                                        <td class="table-status">
                                            @if (!item.StockStatus)
                                            {
                                                <h6 class="stock-out">Stock out</h6>
                                            }else
                                            {
                                                <h6 class="stock-in">Stock In</h6>
                                            }                                            
                                        </td>                                     
                                        <td class="table-action">
                                            <form id="basket-delete-form" data-id="@item.Id">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                                

                            </tbody>
                        </table>
                    }
                    
                </div>
            </div>
        </div>
       
    </div>
</section>
